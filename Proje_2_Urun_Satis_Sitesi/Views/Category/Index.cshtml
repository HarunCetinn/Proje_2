@model List<Proje_2_Urun_Satis_Sitesi.Data.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category List</h1>
<br />
@using (Html.BeginForm())
            {
                <p>
                    Category Name: @Html.TextBox("p")
                    <input type="submit" value="Find" />
                </p>
            }
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Category Name</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <th>@x.CategoryId</th>
            <td>@x.CategoryName</td>
            <td>@x.Status</td>
            <td><a href="/Category/CategoryDelete/@x.CategoryId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Category/CategoryGet/@x.CategoryId" class="btn btn-warning">Update</a></td>
        </tr>
        }
</table>
<td><a href="/Category/CategoryAdd/" class="btn btn-primary">New Category</a></td>
